@model IEnumerable<SpeedPort_Airlines.Models.Promo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DestinationCountry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PromoValidity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TravelAgency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PromoPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DestinationCountry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PromoValidity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TravelAgency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PromoPrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
